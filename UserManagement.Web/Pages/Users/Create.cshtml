@page
@model UserManagement.Web.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-person-plus"></i> Crear Usuario</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="User.Name" class="form-label"></label>
                    <input asp-for="User.Name" class="form-control" />
                    <span asp-validation-for="User.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="User.Birthdate" class="form-label"></label>
                    <input asp-for="User.Birthdate" type="date" class="form-control" />
                    <span asp-validation-for="User.Birthdate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="User.Gender" class="form-label"></label>
                    <select asp-for="User.Gender" class="form-control">
                        <option value="M">Masculino</option>
                        <option value="F">Femenino</option>
                    </select>
                    <span asp-validation-for="User.Gender" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

